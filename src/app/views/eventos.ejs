<%- include('../includes/head.ejs') %>
    <%- include('../includes/headers.ejs') %>


        <!-- ##### Breadcumb Area Start ##### -->
        <section class="breadcumb-area bg-img bg-overlay" style="background-image: url(src/utils/img/fondos/bg_01.jpg);">
            <div class="bradcumbContent">
                <!-- <p>See what’s new</p> -->
                <h2>EVENTOS</h2>
            </div>
        </section>
        <!-- ##### Breadcumb Area End ##### -->
        <section class="login-area section-padding-100" id="registro"></section>
            <div class="container">
                <div class="card">
                    <form action="eventos" method="POST">
                        <div class="card-body">
                            <div class="row">
                                <!-- 1 -->
                                <div class="col-md-6">
                                    <label for="nombre">Nombre el evento:</label>
                                    <input class="form-control text-uppercase" type="text" name="nombre_evento" id="nombre_evento"
                                        placeholder="Ingresa el evento" min="6" max="" autofocus value="" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="nombre">Fecha:</label>
                                    <input class="form-control text-uppercase" type="date" name="fecha" id="fecha"
                                        placeholder="Ingresa el Fecha" min="6" min="2019-01-01" max="2030-01-01" value="" required>
                                </div>
                                <!-- 2 -->
                                <div class="col-md-6">
                                    <label for="nombre">Hora:</label>
                                    <input class="form-control text-uppercase" type="time" name="hora" id="hora"
                                        placeholder="Ingresa la Hora" value="" required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="nombre">Patrocinador:</label>
                                    <input class="form-control text-uppercase" type="text" name="patrocinador" id="patrocinador"
                                        placeholder="Ingresa la Actividad" min="2" max="25" value="" required>
                                </div>

                                <!-- 3 -->
                                <div class="col-md-6">
                                    <label for="nombre">Actividad:</label>
                                    <input class="form-control text-uppercase" type="text" name="actividad" id="actividad"
                                        placeholder="Ingresa la Actividad" min="2" max="25" value="" required>
                                </div>

                                <div class="col-md-6">
                                    <label for="nombre">lugar:</label>
                                    <input class="form-control text-uppercase" type="text" name="lugar" id="lugar"
                                        placeholder="Ingresa el Lugar" min="2" max="25" value="" required>
                                </div>
                            </div>
                            <div class="row d-flex justify-content-center mt-3">
                                <input type="submit" class="btn btn-dark btn-block" value="Ingresar">
                            </div>
                        </div>
                        <!-- <div style="height: 15px;"></div> -->
                    </form>
                        <div class="row justify-content-center">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <div class="card-footer">
                                        <table id="verTableUsuario" class="table table-striped table-hover table-bordered" style="width:100%">
                                            <thead class="text-center thead-dark">
                                                <tr>
                                                    <td>#</td>
                                                    <td>Evento</td>
                                                    <td>Fecha</td>
                                                    <td>Hora</td>
                                                    <td>Patrocinador</td>
                                                    <td>Actividad</td>
                                                    <td>Lugar</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (let index=0; index < datos.length; index++) { %>
                                                    <tr>
                                                        <td style="text-align: center;"><%= datos[index].id_eventos %></td>
                                                        <td style="text-align: center;"><%= datos[index].nombre_evento %></td>
                                                        <td style="text-align: center;"><%= datos[index].fecha %></td>
                                                        <td style="text-align: center;"><%= datos[index].hora %></td>
                                                        <td style="text-align: center;"><%= datos[index].patrocinador %></td>
                                                        <td style="text-align: center;"><%= datos[index].actividad %></td>
                                                        <td style="text-align: center;"><%= datos[index].lugar %></td>
                                                        <td>
                                                            <div class="col">
                                                                <button type="button" class="mr-1 btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal<%= datos[index].id_eventos %>" data-bs-whatever="@mdo"><i class="fas fa-marker"></i></button>
                                                                    <div style="height: 5px;"></div>
                                                                <a class="mr-1 btn btn-danger"  href="/deleteEventos/<%= datos[index].id_eventos %>"> <i class="fas fa-trash-alt"></i></a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <div class="modal fade" id="exampleModal<%= datos[index].id_eventos %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                          <div class="modal-content">
                                                            <div class="modal-header">
                                                              <h5 class="modal-title" id="exampleModalLabel">Actualización</h5>
                                                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form method="POST" action="/updateEventos/<%= datos[index].id_eventos%>">
                                                                <div class="mb-3">
                                                                  <label for="recipient-name" class="col-form-label">Evento:</label>
                                                                  <input type="text" name="nombre_evento" class="form-control" id="recipient-name" value="<%= datos[index].nombre_evento%>">
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Fecha:</label>
                                                                    <input type="date" name="fecha" class="form-control" min="2019-01-01" max="2030-01-01" id="recipient-name"  value="<%= datos[index].fecha%>">
                                                                  </div>
                                                                <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Hora:</label>
                                                                    <input type="time" name="hora" class="form-control" id="recipient-name"  value="<%= datos[index].hora%>">
                                                                  </div>
                                                                  <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Patrocinador:</label>
                                                                    <input type="text" name="patrocinador" class="form-control" id="recipient-name" value="<%= datos[index].patrocinador%>">
                                                                  </div>
                                                                  <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Actividad:</label>
                                                                    <input type="text" name="actividad" class="form-control" id="recipient-name" value="<%= datos[index].actividad%>">
                                                                  </div>
                                                                  <div class="mb-3">
                                                                    <label for="recipient-name" class="col-form-label">Lugar:</label>
                                                                    <input type="text" name="lugar" class="form-control" id="recipient-name" value="<%= datos[index].lugar%>">
                                                                  </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                                                    <input type="submit" class="btn btn-secondary" value="Actualizar">
                                                                </div>
                                                            </form>
                                                          </div>
                                                        </div>
                                                      </div>
                                                      <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                        </div>
                    </div>
                </section>

        <div style="height: 50;"></div>
    
        <!-- ##### Breadcumb Area End ##### -->
        <%- include('../includes/footer.ejs') %>

            <!-- Iniciar alerta -->

            <% if(typeof alert !="undefined" ) { %>
                <script>
                    Swal.fire({
                        title: '<%= alertTitle  %>',
                        text: '<%= alertMessage %>',
                        icon: '<%= alertIcon %>',
                        showConfirmButton: '<%= showConfirmButton %>',
                        timer: 2500
                    }).then(() => {
                        window.location = '/<%= ruta %>'
                    })
                </script>
                <% } %>

                    <!-- Fin alerta -->