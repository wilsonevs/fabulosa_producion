<%- include('../includes/head.ejs') %>
    <%- include('../includes/headers.ejs') %>


        <!-- ##### Breadcumb Area Start ##### -->
        <section class="breadcumb-area bg-img bg-overlay"
            style="background-image: url(src/utils/img/fondos/bg_01.jpg);">
            <div class="bradcumbContent">
                <!-- <p>See what’s new</p> -->
                <h2>PARTICIPANTES</h2>
            </div>
        </section>
        <!-- ##### Breadcumb Area End ##### -->

    <section class="login-area section-padding-100" id="registro"></section>
        <div class="container">
            <div class="card">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <div class="card-footer">
                                <table id="verTableUsuario" class="table table-striped table-hover table-bordered"
                                    style="width:100%">
                                    <thead class="text-center thead-dark">
                                        <tr>
                                            <td>#</td>
                                            <td>Nombres</td>
                                            <td>Apellidos</td>
                                            <td>Ciudad</td>
                                            <td>Dirreción</td>
                                            <td>Teléfono</td>
                                            <td>Correo</td>
                                            <td>Premio</td>
                                            <td>Tipo producto</td>
                                            <td>Fecha Entrega</td>
                                            <td>Código Premio</td>
                                            <td>Opción</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (var index=0; index < datos.length; index++) { %>
                                            <tr>
                                                <td style="text-align: center;"><%= datos[index].id_cliente%></td>
                                                <td style="text-align: center;"><%= datos[index].firstname%></td>
                                                <td style="text-align: center;"><%= datos[index].lastname%></td>
                                                <td style="text-align: center;"><%= datos[index].ciudad%></td>
                                                <td style="text-align: center;"><%= datos[index].addre%></td>
                                                <td style="text-align: center;"><%= datos[index].telefono%></td>
                                                <td style="text-align: center;"><%= datos[index].email%></td>
                                                <td style="text-align: center;"><%= datos[index].titulo%></td>
                                                <td style="text-align: center;"><%= datos[index].nombre_producto%></td>
                                                <td style="text-align: center;"><%= datos[index].fecha%></td>
                                                <td style="text-align: center;"><%= datos[index].codigo%></td>
                                                <td>
                                                    <div class="col">
                                                        <a class="mr-1 btn btn-danger" href="/deleteparticipantes/<%= datos[index].id_cliente_sorteos %>"> <i class="fas fa-trash-alt"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

        <!-- ##### Breadcumb Area End ##### -->
        <%- include('../includes/footer.ejs') %>

            <!-- Iniciar alerta -->

            <% if(typeof alert !="undefined" ) { %>
                <script>
                    Swal.fire({
                        title: '<%= alertTitle  %>',
                        text: '<%= alertMessage %>',
                        icon: '<%= alertIcon %>',
                        showConfirmButton: '<%= showConfirmButton %>',
                        timer: 2500
                    }).then(() => {
                        window.location = '/<%= ruta %>'
                    })
                </script>
                <% } %>

                    <!-- Fin alerta -->